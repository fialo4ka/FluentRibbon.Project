<fluent:RibbonTabItem x:Class="ImageBinding.GISRibbonTabItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageBinding"
             xmlns:controls="clr-namespace:ImageBinding"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:fluent="urn:fluent-ribbon"
>
    <fluent:RibbonGroupBox Header="Start">
        <local:GISRibbonButton 
                       Header="Neu"
                       LargeIcon="/Images/new.png"/>
        <local:GISRibbonButton 
                       Header="Save"
                       LargeIcon="/Images/save.png"/>
    </fluent:RibbonGroupBox>
</fluent:RibbonTabItem>
